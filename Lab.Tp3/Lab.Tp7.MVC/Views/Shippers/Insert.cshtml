<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/Site.css" rel="stylesheet" />
@model Lab.Tp7.Common.Models.ShippersModel

@{
    ViewBag.Title = "Shippers Page";
}

@if (ViewBag.Id == null)
{
    <h3>Agregar Shipper</h3>
    using (Html.BeginForm("Insert", "Shippers", FormMethod.Post))
    {
        @Html.LabelFor(s => s.Name);
        @Html.TextBoxFor(s => s.Name, new { @Class = "form-control form-control-lg", @Placeholder = "Company Name" });
        @Html.ValidationMessageFor(s => s.Name, null, new { @Class = "text-danger"});
        <br />
        @Html.LabelFor(s => s.Phone);
        @Html.TextBoxFor(s => s.Phone, new { @Class = "form-control form-control-lg", @Placeholder = "(000) 000-0000" });
        @Html.ValidationMessageFor(s => s.Phone, null, new { @Class = "text-danger" });
        <br />
        <input type="submit" class="btn btn-success" value="Save" />
    }
}
else
{
    <h3>Modificar Shipper</h3>
    using (Html.BeginForm("Update", "Shippers", FormMethod.Post))
    {
        @Html.LabelFor(s => s.Name);
        @Html.TextBoxFor(s => s.Name, new { @Value = ViewBag.Name, @Class = "form-control form-control-lg", @Placeholder = "Company Name" });
        @Html.ValidationMessageFor(s => s.Name, null, new { @Class = "text-danger" });
        <br />
        @Html.LabelFor(s => s.Phone)
        @Html.TextBoxFor(s => s.Phone, new { @Value = ViewBag.Phone, @Class = "form-control form-control-lg", @Placeholder = "(000) 000-0000" });
        @Html.ValidationMessageFor(s => s.Phone, null, new { @Class = "text-danger" });
        <br/>
        <input type="submit" class="btn btn-success" value="Save" />
    }
}
<script src=@Url.Content("~/Scripts/jquery-3.4.1.js")></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
